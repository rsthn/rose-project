(sentinel::auth-required)

(shield::validate form

	(shield::field name
		required: false
		pattern: name
		min-length: 4
	)
)

(db::update ##users `user_id={Session.currentUser.user_id}` (form))

(sentinel::reload)

(&
	response: (int 200)
	message: (Strings.@messages.data_saved)
	data: ((call 'account.get').data)
)
